---
import { Swiper, SwiperSlide } from 'swiper/react';
import { EffectParallax, Navigation, Pagination } from 'swiper/modules';
import 'swiper/css';
import 'swiper/css/effect-fade';
import 'swiper/css/navigation';
import 'swiper/css/pagination';

const images = [
  {
    url: 'https://source.unsplash.com/random/1920x1080?nature',
    title: 'Nature\'s Beauty',
    tag: 'Landscape'
  },
  {
    url: 'https://source.unsplash.com/random/1920x1080?portrait',
    title: 'Human Spirit',
    tag: 'Portrait'
  },
  {
    url: 'https://source.unsplash.com/random/1920x1080?architecture',
    title: 'Urban Dreams',
    tag: 'Architecture'
  }
];
---

<section class="h-screen relative overflow-hidden">
  <div class="absolute inset-0 z-10">
    <Swiper
      modules={[EffectParallax, Navigation, Pagination]}
      effect="fade"
      speed={1000}
      parallax={true}
      navigation
      pagination={{ clickable: true }}
      loop={true}
      className="h-full"
    >
      {images.map((image, index) => (
        <SwiperSlide key={index}>
          <div class="relative h-full">
            <img
              src={image.url}
              alt={image.title}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 hover:scale-105"
            />
            <div class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-black/70 to-transparent">
              <h2 class="text-4xl font-bold mb-2 transform translate-y-0 transition-transform duration-500">
                {image.title}
              </h2>
              <span class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm backdrop-blur-sm">
                {image.tag}
              </span>
            </div>
          </div>
        </SwiperSlide>
      ))}
    </Swiper>
  </div>
</section>